{
    "deploy": {
        "values": [
            {
                "name": "squeezePath",
                "type": "static",
                "platforms": [ "win32" ],

                "value": "C:\\SqueezeTest"
            },
            {
                "name": "squeezePath",
                "type": "static",
                "platforms": [ "darwin" ],

                "value": "<THE PATH TO SQUEEZE ON MAC>"
            }
        ],
        "packages": [
            {
                "name": "Plugin",                
                "description": "Plugin",
                "button": {
                    "text": "Deploy Local",
                },
                "files": [
                    "plugin/**"
                ],
                "deployOnSave": false,
                "targets": [
                    "localPluginFolder"
                ]
            },
            {
                "name": "Plugin Server",                
                "description": "Plugin Server",
                "button": {
                    "text": "Deploy Server",
                },
                "files": [
                    "plugin/**"
                ],
                "deployOnSave": false,
                "targets": [
                    "serverPluginFolder"
                ]
            }
        ],

        "targets": [
            {
                "name": "localPluginFolder",
                "type": "local",                
                "description": "Squeeze Server",
                "dir": "${squeezePath}"
            },
            {
                "name": "serverPluginFolder",
                "type": "local",                
                "description": "Squeeze Server",
                "dir": "\\\\server\\path"
            }
        ]
    }
}