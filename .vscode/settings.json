{
    "deploy": {
        "values": [
            {
                "name": "SqueezePath",
                "type": "static",
                "platforms": [ "win32" ],

                "value": "C:\\SqueezeTest"
            },
            {
                "name": "SqueezePath",
                "type": "static",
                "platforms": [ "darwin" ],

                "value": "/Users/andrew/Library/Application Support/Squeezebox/Plugins/TVH/"
            }
        ],
        "packages": [
            {
                "name": "PluginLocal",                
                "description": "Plugin Local",
                "button": {
                    "text": "Deploy Local",
                },
                "files": [
                    "plugin/**"
                ],
                "deployOnSave": false,
                "targets": [
                    "LocalPluginFolder"
                ]
            },
            {
                "name": "PluginServer",                
                "description": "Plugin Server",
                "button": {
                    "text": "Deploy Server",
                },
                "files": [
                    "plugin/**"
                ],
                "deployOnSave": false,
                "targets": [
                    "ServerPluginFolder"
                ]
            }
        ],

        "targets": [
            {
                "name": "LocalPluginFolder",
                "type": "local",                
                "description": "Squeeze Server",
                "dir": "${SqueezePath}",
                "mappings": [
                    {
                        "source": "/plugin",
                        "target": "/"
                    }
                ]
            },
            {
                "name": "ServerPluginFolder",
                "type": "local",                
                "description": "Squeeze Server",
                "dir": "\\\\server\\path",
                "mappings": [
                    {
                        "source": "/plugin",
                        "target": "/"
                    }
                ]
            }
        ]
    }
}